[core]
	commitGraph = true
	editor = nvim
[diff]
	algorithm = patience
[gc]
	writeCommitGraph = true
[protocol]
	version = 2
[alias]
  branch-name = "!git rev-parse --abbrev-ref HEAD"

  d = diff
  dc = diff --cached
  p = "!git pull origin $(git branch-name)"
  l = log --oneline
  latest = log --oneline -1
  br = branch
  dall = "!git branch | grep -v "master" | xargs git branch -D"
  s = status
  cm = commit
  re = rebase
  fo = fetch origin
  co = checkout --no-guess
  cor = checkout
  com = checkout master
  pb = "!git push origin $(git branch-name)"
[url "https://github.com/Shopify/"]
	insteadOf = git@github.com:Shopify/
	insteadOf = git@github.com:shopify/
	insteadOf = ssh://git@github.com/Shopify/
	insteadOf = ssh://git@github.com/shopify/
[user]
	name = Chris Silivestru
	email = chris.silivestru@shopify.com
[credential]
	helper = 
	helper = store --file /opt/dev/var/private/git_credential_store
[pull]
  rebase = true
